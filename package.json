{
  "name": "hardhat-template-viem",
  "version": "1.0.0",
  "type": "module",
  "author": {
    "name": "Michael",
    "url": "https://github.com/michaelbera"
  },
  "scripts": {
    "clean": "rm -rf ./artifacts ./cache ./coverage ./types ./coverage.json ./ignition/deployments",
    "compile": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat compile",
    "lint": "$npm_execpath run lint:ts && $npm_execpath run lint:sol",
    "lint:sol": "solhint --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:ts": "eslint --ignore-path ./.eslintignore --ext .js,.ts .",
    "lint:fix": "eslint --fix '**/*.{pajs,ts,json}' && prettier --write . && solhint 'contracts/**/*.sol' --fix --noPrompt",
    "test": "pnpm run compile && hardhat test",
    "test-local": "hardhat test --network localhost",
    "tasks": "tsx scripts/plugins/run.ts --dir tasks",
    "deploy": "tsx scripts/plugins/run.ts --dir deploy",
    "contract-size": "tsx scripts/plugins/contract-size.ts"
  },
  "engines": {
    "node": ">=18.16.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ignition": "^3.0.3",
    "@nomicfoundatipackon/hardhat-toolbox-viem": "^5.0.0",
    "@openzeppelin/contracts": "^5.4.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^22.8.5",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "chalk": "^5.6.2",
    "citty": "^0.1.6",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^10.1.8",
    "forge-std": "github:foundry-rs/forge-std#v1.9.4",
    "hardhat": "^3.0.7",
    "prettier": "^3.6.2",
    "prettier-plugin-solidity": "^2.1.0",
    "solhint": "^6.0.1",
    "solhint-plugin-prettier": "^0.1.0",
    "tsx": "^4.20.6",
    "typescript": "~5.8.0",
    "viem": "^2.30.0"
  },
  "files": [
    "contracts"
  ],
  "keywords": [
    "blockchain",
    "ethers",
    "ethereum",
    "hardhat",
    "smart-contracts",
    "solidity",
    "template",
    "typescript",
    "viem"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "solmate": "^6.8.0"
  }
}
